{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "amd",                                /* Specify what module code is generated. */
        "outFile": "./lib/static/js/index.all.js",                                  /* Specify a file that bundles all outputs into one JavaScript file. If 'declaration' is true, also designates a file that bundles all .d.ts output. */
    },
    "include": [
        "src/index/*.ts",
        "src/index/**/*.ts",
        "src/common/*.ts",
        "src/common/**/*.ts"
    ],
}